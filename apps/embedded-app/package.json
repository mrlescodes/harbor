{
  "name": "harbor",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "next build",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "dev": "next dev --turbopack",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "start": "next start",
    "typecheck": "tsc --noEmit",
    "deploy-app-config": "pnpm run generate-app-config && shopify app deploy",
    "generate-app-config": "dotenvx run -f .env.local -- tsx ./tooling/generate-toml-files.ts",
    "prisma:generate": "dotenvx run -f .env.local -- pnpm prisma generate",
    "prisma:push": "dotenvx run -f .env.local -- pnpm prisma db push"
  },
  "dependencies": {
    "@harbor/shopee-api-client": "workspace:*",
    "@prisma/client": "^6.6.0",
    "@shopify/polaris": "^13.9.5",
    "@shopify/shopify-api": "^11.12.0",
    "@t3-oss/env-nextjs": "^0.13.4",
    "effect": "^3.14.13",
    "next": "^15.3.1",
    "react": "catalog:react19",
    "react-dom": "catalog:react19",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@harbor/eslint-config": "workspace:*",
    "@harbor/prettier-config": "workspace:*",
    "@harbor/tailwind-config": "workspace:*",
    "@harbor/tsconfig": "workspace:*",
    "@dotenvx/dotenvx": "^1.40.0",
    "@iarna/toml": "^2.2.5",
    "@shopify/app-bridge-types": "^0.0.18",
    "@types/node": "^22.15.3",
    "@types/react": "catalog:react19",
    "@types/react-dom": "catalog:react19",
    "eslint": "catalog:",
    "jiti": "^1.21.7",
    "prisma": "^6.6.0",
    "tsx": "^4.19.3",
    "prettier": "catalog:",
    "tailwindcss": "catalog:",
    "typescript": "catalog:"
  },
  "prettier": "@harbor/prettier-config"
}
