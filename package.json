{
  "name": "harbor",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "dev": "turbo run dev",
    "format": "pnpm run format:js && pnpm run format:package-json",
    "format:js": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "format:package-json": "sort-package-json  \"package.json\" \"apps/*/package.json\" \"packages/*/package.json\" \"tooling/*/package.json\"",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@harbor/prettier-config": "workspace:*",
    "prettier": "catalog:",
    "sort-package-json": "^3.0.0",
    "turbo": "^2.5.1",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.x",
    "pnpm": ">=9.x"
  },
  "prettier": "@harbor/prettier-config"
}