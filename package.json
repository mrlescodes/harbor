{
  "name": "shopify-app-template-next",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "check-types": "turbo run check-types",
    "dev": "turbo run dev",
    "format": "pnpm run format:js && pnpm run format:package-json",
    "format:js": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "format:package-json": "sort-package-json  \"package.json\" \"apps/*/package.json\" \"packages/*/package.json\" \"tooling/*/package.json\"",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "prettier": "^3.5.3",
    "sort-package-json": "^3.0.0",
    "turbo": "^2.5.0",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}